<h1 class="text-center">Oceny z Form Muzycznych</h1><br>
<table class="table">
    <tr>
        <th>Temat</th>
        <th>Data</th>
        <th>Ocena</th>
    </tr>
    <% @grades.each do |g| %>
    <tr>
        <% if Test.find(g.test_id).subject == 'Formy Muzyczne' && current_user.id == g.user_id %>
            <td><%= Test.find(g.test_id).topic %></td> 
            <td><%= Test.find(g.test_id).date %>
            <td><%= g.result %></td>
        <% end %>
    </tr>
<% end %>
</table>